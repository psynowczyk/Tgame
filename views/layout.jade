doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/index.css')
		link(rel='stylesheet', href='/stylesheets/signup.css')
		link(rel='stylesheet', href='/stylesheets/map.css')
		script(src="/javascripts/jquery-2.1.1.min.js")
		script(src="/javascripts/index.js")
	body
		div(id='header')
			if loggedIn
				a(href='/' class='navilink') Kokpit
				a(href='/map' class='navilink') Mapa
			else
				a(href='/' class='navilink') Strona główna
				a(href='/signup' class='navilink') Rejestracja
				form(action='/login', method='post', class='loginform')
						div(class='forminputbox')
							input(type='text', name='login', placeholder='login')
						div(class='forminputbox')
							input(type='password', name='password', placeholder='password')
						div(class='forminputbox')
							input(type='submit', value='login')
		div(id='container')
			block content
		div(id='footer')
			if loggedIn
				div(id='footavatar')
				div(id='footbar')
					div(id='useroptions')
						div(class='useroption')
							a(href='/editprofile') edytuj profil
						div(class='useroption')
							a(href='/logout') wyloguj
					div(id='usermenu', status='0')= username
					div(id='walletbox')
						div(id='walleticon') $
						div(id='walletvalue')= wallet
