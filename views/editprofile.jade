extends layout

block content
	div(class='signupbox')
		form(action='/editprofile', method='post', autocomplete='off')
			div(class='forminputbox')
				div(class='label') Username
				input(type='text', name='username', placeholder=user.local.username)
				div(class='inputstatus', id='username')
			br
			div(class='forminputbox')
				div(class='label') Login
				input(type='text', name='login', placeholder=user.local.login)
				div(class='inputstatus', id='login')
			br
			div(class='forminputbox')
				div(class='label') Password
				input(type='password', name='password', placeholder='*****')
				div(class='inputstatus', id='password')
			br
			div(class='forminputbox')
				div(class='label') Avatar
				input(type='file', name='avtar', accept='image/*')
			br
			div(class='forminputbox')
				input(type='submit', value='Zapisz', disabled='disabled')